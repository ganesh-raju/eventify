<div class="row">
	<h3 class="text-center">
		Create a venue
	</h3>
	<hr>
</div>

<div class="row mtb-5">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for @venue do |f| %>
			<div class="form-group">
				<%= f.text_field :name, class: "form-control", placeholder: "Venue name" %>
			</div>
			<div class="form-group">
				<%= f.text_area :description, class: "form-control", placeholder: "About venue" %>
			</div>

			<div class="row">
				<h3>Facilities</h3>

				<%= f.fields_for :facility do |f| %>
					<div class="col-md-4">
						<div class="custom-control custom-checkbox">
							<%= f.check_box :ac, class: "custom-control-input" %>
						    <label class="custom-control-label">AC</label>
						</div>
					</div>
					<div class="col-md-4">
						<div class="custom-control custom-checkbox">
							<%= f.check_box :pool, class: "custom-control-input" %>
							<label class="custom-control-label"> Pool</label>
						</div>
					</div>
					<div class="col-md-4">
						<div class="custom-control custom-checkbox">
							<%= f.check_box :projector, class: "custom-control-input" %>
							<label class="custom-control-label"> Projector</label>
						</div>
					</div>
					<div class="col-md-4">
						<div class="custom-control custom-checkbox">
							<%= f.check_box :drinks, class: "custom-control-input" %>
							<label class="custom-control-label"> Drinks</label>
						</div>
					</div>
					<div class="col-md-4">
						<div class="custom-control custom-checkbox">
							<%= f.check_box :microphone, class: "custom-control-input" %>
							<label class="custom-control-label">Microphone</label>
						</div>
					</div>
					<div class="col-md-4">
						<div class="custom-control custom-checkbox">
							<%= f.check_box :genertor, class: "custom-control-input" %>
							<label class="custom-control-label"> Power backup</label>
						</div>
					</div>
				<% end %>
			</div>
			<br>
			<div class="row">
				<h3>Venue address</h3>
				<br>

				<%= f.fields_for :venue_address do |f| %>
					<div class="col-md-12">
						<div class="form-group">
							<%= f.text_field :contact_number, class: "form-control", placeholder: "Contact number"  %>
						</div>
					</div>

					<div class="col-md-6">
						<div class="form-group">
							<%= f.text_field :address, class: "form-control", placeholder: "Address" %>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<%= f.text_field :country, class: "form-control", placeholder: "Country" %>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<%= f.text_field :state, class: "form-control", placeholder: "State" %>
						</div>
					</div>
					<div class="col-md-6">
						<div class="form-group">
							<%= f.text_field :pincode, class: "form-control", placeholder: "Pincode" %>
						</div>
					</div>
					
					<div class="form-group">
						<%= f.hidden_field :gst, class: "form-control" %>
					</div>
					
				<% end %>
			</div>
			<br>
			<div class="form-group text-center">
				<%= f.submit "Create venue", class: "btn btn-primary" %>
			</div>
		<% end %>	
	</div>
</div>