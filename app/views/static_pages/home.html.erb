


<section id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="section-title">
          <h2>Events</h2>
          <p>Recent events.</p>
        </div>
      </div>
    </div>
    <div class="row row-0-gutter">
      <!-- start portfolio item -->
      <% @events.each do |e| %>
        <div class="col-md-6 col-0-gutter">
          <div class="ot-portfolio-item">
            <figure class="effect-bubba">
              <img src="https://images.pexels.com/photos/3473569/pexels-photo-3473569.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=400&w=940" alt="img02" class="img-responsive">
              <figcaption>
                <h2><%= e.title %></h2>
                <p><%= dateformat(e.start_date) %></p>
                <%= link_to "View more", event_path(e) %>
              </figcaption>
            </figure>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>