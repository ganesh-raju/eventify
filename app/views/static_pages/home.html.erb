


<section id="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="section-title">
          <h2>Venues list</h2>
        </div>
      </div>
    </div>
    <div class="row row-0-gutter">
      <!-- start portfolio item -->
      <% @venues.each do |e| %>
        <div class="col-md-6 col-0-gutter">
          <div class="ot-portfolio-item">
            <figure class="effect-bubba">
              <%= image_tag e.albums.last.venue_images.last.venue_profile.url, class: "img-responsive" %>
              <figcaption>
                <h2><%= e.name %></h2>
                <%= link_to "View more", venue_path(e) %>
              </figcaption>
            </figure>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
